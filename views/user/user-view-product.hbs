<section>
    <div class="container">
        <div class="row">
            <div class="col-12  col-sm-12 col-md-6 mt-5">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width: 450px;">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/product-images/{{product._id}}-01.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/product-images/{{product._id}}-02.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/product-images/{{product._id}}-03.jpg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/product-images/{{product._id}}-04.jpg" alt="fourth slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                </div>
            </div>

            <div class="col-12  col-sm-12 col-md-6 mt-5">

                <h1 style="font-family:Verdana, sans-serif ;">{{product.productName}}</h1>
                <hr>
                <h2>Rs. {{product.productPrice}}</h2>
                <hr>
                <p>Brand: <b>{{product.brand}}</b> ||  Category : <b>{{product.category}}</b>  ||  Size : <b>{{product.productSize}}</b></p>
                <hr>
                    <div class="row">
                    <div class="col-12">
                        <a href="/add-to-cart/{{product._id}}/">
                            <button  id="addToCart"  style="width: 80%; text-decoration:none;"><h6> ADD TO CART</h6></button>
                        </a>
                        
                    </div>

                    {{!-- <div class="col-6">
                        <a href="/buy-now/{{product._id}}" class="btn btn-warning" style="width: 100%;"><b>BUY NOW</b></a>
                    </div> --}}
                    </div>
                <p class="mt-5"><b>Product Details</b></p>
                <p style="font-family: cursive; font-size:18px">{{product.productDescription}}</p>

                <hr>                
            </div>
        </div>
    </div>
</section>



