<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
            <form action="/admin/update-product/{{product._id}}" method="post" enctype="multipart/form-data">
                {{!-- ID of product for updation is set here --}}
                
                <label for="product-name"  class="mt-3"><b> Product Name</b></label>
                    <input type="text" value="{{product.productName}}" name="productName"  class="form-control" style="border-width: 5px;" required>
            
                <label for="product-price"  class="mt-3"><b> Product Price</b></label>
                    <input type="text" value="{{product.productPrice}}" name="productPrice"  class="form-control" style="border-width: 5px;" required>
            
                <label for="product-stock"  class="mt-3"><b> Product Stock</b></label>
                    <input type="number" value="{{product.productStock}}" name="productStock"  class="form-control" style="border-width: 5px;" required>

                <label for="cars" class=" mt-3"><b>Product category:</b></label>
                    <select name="category"  id="category" class="form-control" style="border-width: 5px; height:100%" required>
                        <option value=""></option>
                        <option value="cricket-bat">Cricket bat</option>
                        <option value="cricket-ball">Cricket ball</option>
                        <option value="batting-pads">Batting pads</option>
                        <option value="wicket-keeping-pads">Wicket Keeping Pads</option>
                        <option value="fielding-pads">Fielding Pads</option>
                        <option value="batting-gloves">Batting gloves</option>
                        <option value="wicket-keeping-gloves">Wicket keeping gloves</option>
                        <option value="inner-gloves">Inner gloves</option>
                        <option value="cricket-helmet">Cricket helmet</option>
                        <option value="elbow-guard">elbow guard</option>
                        <option value="chest-guard">Chest guard</option>
                        <option value="thigh-guard">Thigh guard</option>
                        <option value="Abdomen-guard">Abdomen guard</option>
                        <option value="cricket-shoes">Cricket shoes</option>
                        <option value="cricket-kit-bag">Cricket kit bag</option>
                        <option value="cricket-wear">Cricket Wears & Wearables</option>
                        <option value="cricket-accessories">Cricket accessories</option>
                    </select>
            
                <label for="product-description"  class="mt-3"><b> Product Description</b></label>
                    <textarea aria-valuetext=""  class="form-control" name="productDescription" rows="3" style="border-width: 5px;" required>
                        {{product.productDescription}}
                    </textarea>

                <label for="product image" class="mt-5"><b> Product Image 01 : </b></label>
                    <input type="file"  name="productImage01" class="form-control" value="/product-images/{{product._id}}-01.jpg" style="border-width: 5px;" onchange="viewImage1(event)">

                <label for="product image" class="mt-5"><b> Product Image 02 : </b></label>
                    <input type="file"  name="productImage02" class="form-control" value="/product-images/{{product._id}}-02.jpg" style="border-width: 5px;" onchange="viewImage2(event)">
                
                <label for="product image" class="mt-5"><b> Product Image 03 : </b></label>
                    <input type="file"  name="productImage03" class="form-control" value="/product-images/{{product._id}}-03.jpg" style="border-width: 5px;"onchange="viewImage3(event)">
                
                <label for="product image" class="mt-5"><b> Product Image 04 : </b></label>
                    <input type="file"  name="productImage04" class="form-control" value="/product-images/{{product._id}}-04.jpg" style="border-width: 5px;"onchange="viewImage4(event)">

                    <input class="pl-5 pr-5 pt-3 pb-3 mt-5 btn-dark float-left " type="submit" value="Update and Save" style="cursor:pointer ;border-radius:55%">
                    <input class="pl-5 pr-5 pt-3 pb-3 mt-5 btn-dark float-right" type="reset"  value="Reset or Clear"  style="cursor:pointer ;border-radius:55%">
            </form>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
                <a href="/admin/delete-product/{{product._id}}" class=" btn btn-danger mt-5 p-3" style="width:100%; cursor:pointer ;" onclick="return alert('Are you sure you want to delete {{product.productName}} ?')">DELETE PRODUCT</a>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3">
                <h6>Image 1</h6>
                <img id="image1" src="/product-images/{{product._id}}-01.jpg" alt="{{this.product-name}}" style="width:250px ; height:auto; border:3px solid black">
            </div>
            <div class="col-md-3">
                <h6>Image 2</h6>
                <img id="image2" src="/product-images/{{product._id}}-02.jpg" alt="{{this.product-name}}" style="width:250px ; height:auto; border:3px solid black">
            </div>
            <div class="col-md-3">
                <h6>Image 3</h6>
                <img id="image3" src="/product-images/{{product._id}}-03.jpg" alt="{{this.product-name}}" style="width:250px ; height:auto; border:3px solid black">
            </div>
            <div class="col-md-3">
                <h6>Image 4</h6>
                <img id="image4" src="/product-images/{{product._id}}-04.jpg" alt="{{this.product-name}}" style="width:250px ; height:auto; border:3px solid black">
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage1(event){
        document.getElementById('image1').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage2(event){
        document.getElementById('image2').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage3(event){
        document.getElementById('image3').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage4(event){
        document.getElementById('image4').src=URL.createObjectURL(event.target.files[0])
    }
</script>
